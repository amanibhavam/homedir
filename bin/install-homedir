#!/usr/bin/env bash

function main {
  set -efu

  if [[ -x "$(type -P apt)" ]]; then
    sudo apt update
    sudo apt install -y make unzip python3-venv
  fi

  mv homedir/.git .
  rm -rf homedir
  git reset --hard
  echo git@github.com:amanibhavam/dotfiles > .dotfiles-repo
  make update
  make upgrade
  make install
  source .bash_profile
  exec bash
}

main "$@"
